<idea-plugin package="com.lasagnerd.odin.debugger">
    <depends>com.intellij.modules.cidr.debugger</depends>
    <depends>com.jetbrains.plugins.webDeployment</depends>

    <extensions defaultExtensionNs="com.intellij">
        <programRunner implementation="com.lasagnerd.odin.debugger.runner.OdinNativeDebugProgramRunner"/>
        <programRunner implementation="com.lasagnerd.odin.debugger.runner.OdinRemoteDebugProgramRunner"/>

        <!--suppress PluginXmlValidity -->
        <projectService serviceImplementation="com.lasagnerd.odin.debugger.OdinDebuggerToolchainService"/>
        <configurationType implementation="com.lasagnerd.odin.debugger.runConfiguration.OdinRemoteDebugRunConfigurationType"/>
    </extensions>

    <extensions defaultExtensionNs="cidr.debugger">
        <languageSupport language="Odin" implementationClass="com.lasagnerd.odin.debugger.OdinDebuggerLanguageSupport"/>
        <editorsExtension language="Odin" implementationClass="com.lasagnerd.odin.debugger.OdinDebuggerEditorsExtension" />
        <lineBreakpointFileTypesProvider implementation="com.lasagnerd.odin.debugger.OdinLineBreakpointFileTypesProvider"/>
    </extensions>

    <extensions defaultExtensionNs="com.lasagnerd.odin">
        <debuggerToolchain implementation="com.lasagnerd.odin.debugger.toolchains.LLDBDapToolchain"/>
        <debuggerToolchain implementation="com.lasagnerd.odin.debugger.toolchains.WinDAPToolchain"/>
        <debuggerToolchain implementation="com.lasagnerd.odin.debugger.toolchains.LLDBToolchain"/>
    </extensions>
</idea-plugin>